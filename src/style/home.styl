@import url('https://fonts.googleapis.com/css?family=Rajdhani:400,700&display=swap')

body
    background #dddddd
    font-family: 'Rajdhani', sans-serif
    color #ffffff

.pop-up-background
  background #00034c95
  border 0.3vh solid #ffffff
  position absolute
  display flex
  width 70vw
  height 70vh
  margin 15vh 15vw
  border-radius 1vw
  transform translateZ(1000vw)
  .pop-up-container 
    width 100%
    height 100%

    h1
      position absolute
      margin 5vh 21vw 0 21vw
      font-size 8vw
      animation-name title-animation
      animation-duration 6s
      animation-iteration-count infinite
    img
      width 30vw
      height 30vw
      margin -35vh 0 0 3vw
      animation-name img-animation
      animation-duration 4s
      animation-iteration-count infinite
      animation-timing-function  ease-in-out
    p 
      font-size 1.5vw
      width 25vw
      margin 30vh 0 0 35vw
    .pop-up-button
        position absolute
        width 10vw
        height 3vw
        margin-left 35vw
        margin-top 3vh
        border-radius 10vh
        border 0.3vh solid #ffffff
    .pop-up-button:hover
        background-color #ffffff40
        cursor pointer
      .pop-up-button-content
        font-size 2vw
        margin 0.4vh 1.2vw

.hidden-item
{
    visibility: hidden;
}

@keyframes title-animation
    0%
        font-size 8vw
    50%
        font-size 8.3vw
    100%
        font-size 8vw

@keyframes img-animation
    0%
        transform rotate(0deg)
    50%
        transform rotate(5deg)
    100%
        transform rotate(0deg)
